{
    "env": {
        "commonjs": true,
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "arrow-spacing": [
            "warn",
            {
                "after": true,
                "before": true
            }
        ],
        "strict": "error",
        "block-spacing": "warn",
        "brace-style": [
            "warn",
            "1tbs"
        ],
        "camelcase": "warn",
        "comma-spacing": [
            "warn",
            {
                "after": true,
                "before": false
            }
        ],
        "comma-style": [
            "warn",
            "last"
        ],
        "eol-last": "error",
        "eqeqeq": "warn",
        "func-call-spacing": "warn",
        "keyword-spacing": [
            "error",
            {
                "after": true,
                "before": true
            }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "max-len": [
            "warn",
            {
                "code": 120
            }
        ],
        "prefer-const": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "semi": "warn",
        "semi-style": [
            "error",
            "last"
        ],
        "space-before-blocks": "warn",
        "spaced-comment": [
            "warn",
            "always"
        ],
        "no-trailing-spaces": "warn",
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ]
    }
}
